@model StudentData
@{
    ViewBag.Title = "CreateStudentHtml";
}

<h2>CreateStudentHtml</h2>

<form action="/ViewEx/CreateStudentHtml" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-md-2">
            Name
        </div>
        <div class="col-md-2">
            <input type="text" name="Name" value="@Model.Name" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            Address
        </div>
        <div class="col-md-2">
            <input type="text" name="Address" value="@Model.Address" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            Age
        </div>
        <div class="col-md-2">
            <input type="text" name="Age" value="@Model.Age" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>        
    </div>
</form>
