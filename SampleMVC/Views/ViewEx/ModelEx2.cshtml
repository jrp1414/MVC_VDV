@model List<StudentData>
@{
    ViewBag.Title = "ModelEx2";
}

<h2>ModelEx2</h2>
@Html.ActionLink("Create New Student", "CreateStudentSTHtmlHelper1")
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Age</th>
            <th></th>
        </tr>
        @*<tr>
            <th><input type="text" /></th>
            <th><input type="text" /></th>
            <th><input type="text" /></th>
            <th><input type="text" /></th>
        </tr>*@
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Age</td>
                @*<td>@Html.ActionLink("View","ModelEx1",new { id= item.Id }, new { @class="btn btn-primary" })</td>*@
                <td>@Html.ActionLink("View","ModelEx1", new { id = item.Id,name=item.Name }, new { @class = "btn btn-default" })</td>
                @*<td><a href="/ViewEx/ModelEx1?id=1">View</a></td>*@
                <td>@Html.ActionLink("Edit", "CreateStudentSTHtmlHelper1", new { id = item.Id}, new { @class = "btn btn-primary" })</td>                
                <td>@Html.ActionLink("Delete", "DeleteStudent", new { id = item.Id }, new { @class = "btn btn-danger" })</td>                
            </tr>
        }
    </tbody>
</table>

